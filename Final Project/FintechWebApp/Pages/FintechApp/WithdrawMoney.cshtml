@page
@model FintechWebApp.Pages.FintechApp.WithdrawMoneyModel
@{
}
<!-- HTML page for Edit Fintech Account -->


<br>
<h2>Withdraw money Instantly</h2>

@if (@Model.errorMessage.Length > 0)
{
	<div>@Model.errorMessage</div>
}

<form method="POST" onsubmit="handleSubmit(event)">
	<table>
		<tr>
			<td>Account Number</td>
			<td><input type="text" name="id" value="@Model.fintech.Id"></td>
		</tr>
		<tr>
			<td> Withdraw Amount</td>
			<td><input type="text" name="balance" value="@Model.fintech.Balance"></td>
		</tr>
		
	</table>
	<p></p>

	@if (@Model.successMessage.Length > 0)
	{
		<div>@Model.successMessage</div>
	}
	<!-- Display a button for submitting the form to edit the bill -->
	<input type="submit" value="Withdraw Money" class="btn btn-danger" />

</form>
